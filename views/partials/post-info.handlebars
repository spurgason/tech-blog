<article class="post">
    <div class="title">
        <span class="user-id"><i class="bi bi-person-circle"></i> {{user.username}} posted</span> <br>
        <p>{{title}}
            <a href="{{post_url}}" target="_blank">
                <span>({{ format_url post_url}})</span>
            </a>
        </p>
        <span>{{body}}</span>


    </div>
    <div class="meta">
        {{ format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>